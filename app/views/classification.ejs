<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Futiba Club - Fullstack Academy - DevPleno - Anderson Sofia Prado</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="/css/mdb.min.css" rel="stylesheet">
    <!-- Your custom styles (optional) -->
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/futiba-interno.css" rel="stylesheet">
</head>

<body>
    <header>
        <!--Navbar-->
        <nav class="navbar navbar-expand-lg navbar-light green fixed-top scrolling-navbar">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <img src="/img-futiba-club/logo.png" height="30" alt="Futiba Club">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-7" aria-controls="navbarSupportedContent-7"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent-7">
                    <% include elements/menu-itens %>                     
                </div>
            </div>
        </nav>
    </header>

    <section class="classificacao">
        <div class="container">
            <h2>Classificação por Grupos</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Grupo</th>
                        <th>Score</th>
                    </tr>
                </thead>
                <tbody>
					<%if(groups.length > 0){ %>
						<% groups.forEach( group => { %> 
							<tr>
								<td scope="row"><%= group.id %></td>
								<td><%= group.name %></td>
								<td><%= group.score %></td>
							</tr>
						<% }) %>
					<% } else{ %>
						<tr>
							<td colspan="3">Não existem grupos cadastrados.</td>
						</tr>
					<% } %>
                </tbody>
            </table>
        </div>
    </section>
    
      
    <% include elements/footer %>
